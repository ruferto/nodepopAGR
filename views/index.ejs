<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="title-container"><h1><a class="title" href="/"><b><%= title %></a></b></h1>
    <p class="subtitle">Compraventa a go-go</p></div>
    <div class="ads-container">
    <% anuncios.forEach( anuncio => {%>
      <div class="ad-container">
          <%= (anuncio.venta) ? 'Se vende' : 'Se compra' %>:<br>
          <span class="ad-title"><b><%= anuncio.nombre %></b></span><br>
          <div class="img-container">
            <img src="/images/<%= anuncio.foto %>" width="180" alt=<%=anuncio.foto %> /><br>
          </div>
          <span class="precio"><%= anuncio.precio % 1 != 0 ? Intl.NumberFormat('de-DE', { style: 'currency', currency: 'EUR' }).format(anuncio.precio) : Intl.NumberFormat('de-DE').format(anuncio.precio)+' â‚¬' %></span>
          <span class="tags">Etiquetas: 
            <% anuncio.tags.forEach( tag => {
               %> <a href='/?tag=<%=tag%>'><%=tag%> </a><%
            })%>
          </span>
        </div>
    <%}); %>
    </div>
  </body>
</html>

